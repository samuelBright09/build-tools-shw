{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",        // Custom Rule 1: Warn if console.log is used
    "indent": ["error", 2]       // Custom Rule 2: Enforce 2-space indentation
  }
}
